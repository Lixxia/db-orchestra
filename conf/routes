# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Table Pages
GET 	/players 					controllers.Application.players()
GET 	/orchestra					controllers.Application.orchestra()	
GET 	/brass						controllers.Application.brass()
GET		/woodwind					controllers.Application.woodwind()
GET 	/keyboard					controllers.Application.keyboard()
GET 	/percussion					controllers.Application.percussion()
GET		/symphonicstring			controllers.Application.symphonicstring()

# Database Interactions
POST	/:name/add					controllers.Application.addRow(name: String)
GET 	/update						controllers.Application.update()
POST	/:name/:id/update			controllers.Application.updateRow(name: String,id: Int)
POST	/:name/:id/delete			controllers.Application.deleteRow(name: String,id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

